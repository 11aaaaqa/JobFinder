@{
    ViewData["Title"] = "Регистрация";
}
@using GeneralLibrary.Constants
@model Web.MVC.DTOs.Auth.RegisterDto

<form method="post" asp-action="Register" asp-controller="Auth">
    <p>
        <input type="radio" asp-for="AccountType" value="@AccountTypeConstants.Employee" checked />Ищу работу
    </p>
    <p>
        <input type="radio" asp-for="AccountType" value="@AccountTypeConstants.Employer" />Ищу сотрудников
    </p>
    <div asp-validation-summary="ModelOnly"></div>
    <span asp-validation-for="Name"></span>
    <span asp-validation-for="Surname"></span>
    <span asp-validation-for="Email"></span>
    <span asp-validation-for="Password"></span>
    <span asp-validation-for="ConfirmPassword"></span>
    <span asp-validation-for="AccountType"></span>

    <div>
        <input asp-for="Email" placeholder="Адрес эл. почты"/>
    </div>
    <div>
        <input asp-for="Name" placeholder="Имя"/>
    </div>
    <div>
        <input asp-for="Surname" placeholder="Фамилия"/>
    </div>
    <div>
        <input asp-for="Password" placeholder="Пароль"/>
    </div>
    <div>
        <input asp-for="ConfirmPassword" placeholder="Подтвердите пароль"/>
    </div>

    <input type="submit" value="Зарегистрироваться"/>
</form>